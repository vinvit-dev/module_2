<p>{{ markup }}</p>
<section class="guest-book_add-form">
    {{ add_form }}
</section>

<h1 class="feedback-title">Feedbacks list</h1>
<section class="guest-book_feedback-list">

    {% for item in items %}
        <div class="feedback">
            <div class="row">
                <div class="feedback_user">
                    <img src="{{ item.avatar }}" alt="{{ name }}-avatar">
                    <div class="name">{{ item.name }}</div>
                </div>
                <div class="date">{{ item.date }}</div>
            </div>

           <div class="feedback_message">
               <div class="massage">{{ item.message }}</div>
               {% if item.image %}
                   <a href="{{ item.image }}">
                       <img src="{{ item.image }}" alt="message-image">
                   </a>
               {% endif %}
           </div>

            <div class="row">
                <div class="feedback_contact">
                    <div class="email">Email: {{ item.email }}</div>
                    <div class="phone">Phone number: {{ item.phone }}</div>
                </div>
                {% if user.hasPermission('access to edit guest_book data') %}
                    <div class="feedback_buttons">
                        <a class="use-ajax" data-dialog-type="modal" href="/guest-book/edit/{{ item.id }}">Edit</a>
                        <a class="use-ajax" data-dialog-type="modal" href="/guest-book/delete/{{ item.id }}">Delete</a>
                    </div>
                {% endif %}
            </div>
        </div>
    {% endfor %}
</section>
